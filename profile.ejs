        .right ul {
            list-style-type: none;
            padding: 0;
        }

        .left li,
        .right li {
            margin-bottom: 10px;
        }

        .left p,
        .right p {
            margin: 0;
        }
    </style>
</head>
<body>
    <div class="container">
        <nav class="sidebar">
            <ul>
                <li><a href="">Profile</a></li>
                <li><a href="/profile/Create_user">Create_your</a></li>
                <li><a href="/profile/login">Login</a></li>
                <li><a href="/logout">Logout</a></li>
            </ul>
        </nav>
        <main class="content">
            <h1>User Profile</h1>
            <% Data.forEach(user => { %>
                <div class="profile-info">
                    <img src="https://via.placeholder.com/150" alt="Profile Image">
                    <div class="details">
                        <h2><%= user.Name %></h2>
                        <p>Email: <%= user.Email %></p>
                        <p>Phone: <%= user.number %></p>
                        <p>Location: <%= user.Address %></p>   
                    </div>
                </div>
                <div class="education">
                    <h2>Education</h2>
                    <ul>
                        <li>
                            <p><strong>Secondary School</strong></p>
                            <p><%= user.secondary_school %>, <%= user.secondary_year %></p>
                        </li>
                        <li>
                            <p><strong>Senior Secondary School</strong></p>
                            <p><%= user.senior_secondary_school %>, <%= user.senior_secondary_year %></p>
                        </li>
                        <li>
                            <p><strong>College</strong></p>
                            <p><%= user.college_name %>, <%= user.college_year %></p>
                        </li>
                    </ul>
                </div>
                <div class="skills">
                    <h2>Skills</h2>
                    <div class="left">
                        <ul>
                            <% if (user.skill1) { %>
                                <li><p><%= user.skill1 %></p></li>
                            <% } %>
                            <% if (user.skill2) { %>
                                <li><p><%= user.skill2 %></p></li>
                            <% } %>
                        </ul>
                    </div>
                    <div class="right">
                        <ul>
                            <% if (user.skill3) { %>
                                <li><p><%= user.skill3 %></p></li>
                            <% } %>
                            <% if (user.skill4) { %>
                                <li><p><%= user.skill4 %></p></li>
                            <% } %>
                        </ul>
                    </div>
                </div>
            <% }) %>
        </main>
    </div>
</body>
</html>
